// Name: Sudoku with Board and Solver
// Description: Demonstrates OOP with separate Board and Solver classes.

// Board class: manages the grid data
class Board is
    var grid : Array[Integer](81)

    // Constructor: initialize empty 9x9 grid
    this() is
        var i : Integer(0)
        while i.Less(Integer(81)) loop
            grid.set(i, Integer(0))
            i := i.Plus(Integer(1))
        end
    end

    // Set value at (row, col)
    method set(row : Integer, col : Integer, val : Integer) is
        var index : Integer(0)
        index := row.Mult(Integer(9)).Plus(col)
        grid.set(index, val)
    end

    // Get value at (row, col)
    method get(row : Integer, col : Integer) : Integer is
        var index : Integer(0)
        index := row.Mult(Integer(9)).Plus(col)
        return grid.get(index)
    end

    // Print the board
    method print() is
        var p : Printer()
        var row : Integer(0)
        while row.Less(Integer(9)) loop
            var col : Integer(0)
            while col.Less(Integer(8)) loop
                var val : Integer(0)
                val := this.get(row, col)
                p.print(val)
                col := col.Plus(Integer(1))
            end
            var lastVal : Integer(0)
            lastVal := this.get(row, col)
            p.println(lastVal)
            row := row.Plus(Integer(1))
        end
    end
end

// Solver class: contains solving logic, works with a Board
class Solver is
    var board : Board()

    // Constructor: takes a board to solve
    this(b : Board) is
        board := b
    end

    // Check if placing num at (row, col) is valid
    method isSafe(row : Integer, col : Integer, num : Integer) : Boolean is
        // Check row
        var c : Integer(0)
        while c.Less(Integer(9)) loop
            var val : Integer(0)
            val := board.get(row, c)
            if val.Equal(num) then
                return Boolean(false)
            else
            end
            c := c.Plus(Integer(1))
        end

        // Check column
        var r : Integer(0)
        while r.Less(Integer(9)) loop
            var val : Integer(0)
            val := board.get(r, col)
            if val.Equal(num) then
                return Boolean(false)
            else
            end
            r := r.Plus(Integer(1))
        end

        // Check 3x3 box
        var boxRow : Integer(0)
        boxRow := row.Div(Integer(3)).Mult(Integer(3))
        var boxCol : Integer(0)
        boxCol := col.Div(Integer(3)).Mult(Integer(3))

        var i : Integer(0)
        while i.Less(Integer(3)) loop
            var j : Integer(0)
            while j.Less(Integer(3)) loop
                var checkRow : Integer(0)
                checkRow := boxRow.Plus(i)
                var checkCol : Integer(0)
                checkCol := boxCol.Plus(j)
                var val : Integer(0)
                val := board.get(checkRow, checkCol)
                if val.Equal(num) then
                    return Boolean(false)
                else
                end
                j := j.Plus(Integer(1))
            end
            i := i.Plus(Integer(1))
        end

        return Boolean(true)
    end

    // Find next empty cell (returns -1 if none)
    method findEmpty() : Integer is
        var row : Integer(0)
        while row.Less(Integer(9)) loop
            var col : Integer(0)
            while col.Less(Integer(9)) loop
                var val : Integer(0)
                val := board.get(row, col)
                if val.Equal(Integer(0)) then
                    return row.Mult(Integer(9)).Plus(col)
                else
                end
                col := col.Plus(Integer(1))
            end
            row := row.Plus(Integer(1))
        end
        return Integer(0).Minus(Integer(1))
    end

    // Solve the board using backtracking
    method solve() : Boolean is
        var emptyPos : Integer(0)
        emptyPos := this.findEmpty()

        // No empty cells = solved
        if emptyPos.Less(Integer(0)) then
            return Boolean(true)
        else
        end

        // Extract row and col
        var row : Integer(0)
        row := emptyPos.Div(Integer(9))
        var col : Integer(0)
        col := emptyPos.Rem(Integer(9))

        // Try numbers 1-9
        var num : Integer(1)
        while num.LessEqual(Integer(9)) loop
            if this.isSafe(row, col, num) then
                // Place number
                board.set(row, col, num)

                // Recursively solve
                if this.solve() then
                    return Boolean(true)
                else
                end

                // Backtrack
                board.set(row, col, Integer(0))
            else
            end

            num := num.Plus(Integer(1))
        end

        return Boolean(false)
    end
end

class Start is
    method start() is
        // Create a board
        var b : Board()

        // Initial Puzzle Layout:
        // -----------------------
        // - 8 5 | - - - | - - 1
        // 1 7 - | - 6 4 | 8 - -
        // - - 9 | 1 - - | 3 7 2
        // -----------------------
        // 6 2 1 | - 5 - | 7 3 -
        // 8 - - | 7 - - | 1 6 9
        // - - 7 | 6 1 - | - - -
        // -----------------------
        // - 1 - | - - 9 | 5 - 7
        // 7 - - | - 2 6 | - 1 3
        // - 3 4 | 8 - 1 | - - -
        // -----------------------

        // Row 0
        b.set(Integer(0), Integer(1), Integer(8))
        b.set(Integer(0), Integer(2), Integer(5))
        b.set(Integer(0), Integer(8), Integer(1))

        // Row 1
        b.set(Integer(1), Integer(0), Integer(1))
        b.set(Integer(1), Integer(1), Integer(7))
        b.set(Integer(1), Integer(4), Integer(6))
        b.set(Integer(1), Integer(5), Integer(4))
        b.set(Integer(1), Integer(6), Integer(8))

        // Row 2
        b.set(Integer(2), Integer(2), Integer(9))
        b.set(Integer(2), Integer(3), Integer(1))
        b.set(Integer(2), Integer(6), Integer(3))
        b.set(Integer(2), Integer(7), Integer(7))
        b.set(Integer(2), Integer(8), Integer(2))

        // Row 3
        b.set(Integer(3), Integer(0), Integer(6))
        b.set(Integer(3), Integer(1), Integer(2))
        b.set(Integer(3), Integer(2), Integer(1))
        b.set(Integer(3), Integer(4), Integer(5))
        b.set(Integer(3), Integer(6), Integer(7))
        b.set(Integer(3), Integer(7), Integer(3))

        // Row 4
        b.set(Integer(4), Integer(0), Integer(8))
        b.set(Integer(4), Integer(3), Integer(7))
        b.set(Integer(4), Integer(6), Integer(1))
        b.set(Integer(4), Integer(7), Integer(6))
        b.set(Integer(4), Integer(8), Integer(9))

        // Row 5
        b.set(Integer(5), Integer(2), Integer(7))
        b.set(Integer(5), Integer(3), Integer(6))
        b.set(Integer(5), Integer(4), Integer(1))

        // Row 6
        b.set(Integer(6), Integer(1), Integer(1))
        b.set(Integer(6), Integer(5), Integer(9))
        b.set(Integer(6), Integer(6), Integer(5))
        b.set(Integer(6), Integer(8), Integer(7))

        // Row 7
        b.set(Integer(7), Integer(0), Integer(7))
        b.set(Integer(7), Integer(4), Integer(2))
        b.set(Integer(7), Integer(5), Integer(6))
        b.set(Integer(7), Integer(7), Integer(1))
        b.set(Integer(7), Integer(8), Integer(3))

        // Row 8
        b.set(Integer(8), Integer(1), Integer(3))
        b.set(Integer(8), Integer(2), Integer(4))
        b.set(Integer(8), Integer(3), Integer(8))
        b.set(Integer(8), Integer(5), Integer(1))

        // Create solver and pass the board
        var solver : Solver(b)

        // Solve and print
        if solver.solve() then
            b.print()
        else
            var p : Printer()
            p.println(Integer(0))
        end
    end

    this() is
    end
end
